{% extends 'admin.html.twig' %}

{% block title %}
	Edition trick
	{{ trick.id }}
{% endblock %}

{% block body %}

	<div class="tricks-create-container flex items-center justify-center flex-1">
		{{ form_start(form, {attr: {class: "w-[700px]"}}) }}
		<div class="mb-6">
			{{ form_label(form.name, "Titre", {"label_attr": {"class": "block mb-2 text-sm font-medium text-white dark:text-white"}}) }}
			{{ form_widget(form.name, {"attr": {"class": "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"}}) }}
			{{ form_errors(form.name) }}
		</div>
		<div class="mb-6">
			{{ form_label(form.mainImageFile, "Image principale", {"label_attr": {"class": "block mb-2 text-sm font-medium text-white dark:text-white"}}) }}
			{{ form_widget(form.mainImageFile, {"attr": {"class": "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"}}) }}
			{{ form_errors(form.mainImageFile) }}
		</div>
		<div class="mb-6">
			{{ form_label(form.category, "Catégorie", {"label_attr": {"class": "block mb-2 text-sm font-medium text-white dark:text-white"}}) }}
			{{ form_widget(form.category, {"attr": {"class": "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"}}) }}
			{{ form_errors(form.category) }}
		</div>
		<div class="mb-6">
			{{ form_label(form.images, "Médias", {"label_attr": {"class": "block mb-2 text-sm font-medium text-white dark:text-white"}}) }}
			{{ form_widget(form.images, {"attr": {"class": "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"}}) }}
			{{ form_errors(form.images) }}
		</div>
<div class="images flex justify-center gap-2">
		{% for image in trick.images %}
			<img src="{{ asset('upload/tricks/' ~ image.name) }}" alt="Product Image" class="w-[22%] h-36 object-cover rounded-lg">
		{% endfor %}
</div>

		<div class="mb-6">
			{{ form_label(form.description, "Description", {"label_attr": {"class": "block mb-2 text-sm font-medium text-white dark:text-white"}}) }}
			{{ form_widget(form.description, {"attr": {"class": "h-[250px] bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"}}) }}
			{{ form_errors(form.description) }}
		</div>


		<input type="hidden" name="_csrf_token" value="{{ csrf_token("authenticate") }}">

		<button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
			Modifier
		</button>
		{{ form_end(form) }}
	</div>

{% endblock %}
